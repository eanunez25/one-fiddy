<% provide(:title, "Login") %>

<h1>Login</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
      <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
        <%= f.label :username %>
        <%= f.text_field :username %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.submit "Login", class: "btn btn-primary" %>
      <% end %>
  </div>
</div>